// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DEV_DB_URL")
}

model User{
  uid String @id
  current_streak Int
  max_streak Int
  last_entry_at DateTime?
  avatar_seed String?
  created_at DateTime
  Entries Entries[]

  @@index([uid])
}

model Entries {
  id Int @id @default(autoincrement())
  uid String
  content Bytes
  Tags Tags[]
  created_at DateTime @default(now())

  user User @relation(fields: [uid], references: [uid])

  @@index([uid])
  @@index([id])
}

model Tags{
  id Int @id @default(autoincrement())
  name String
  color String
  entry_id Int
  created_at DateTime @default(now())

  entry Entries @relation(fields: [entry_id], references: [id])

  @@index([entry_id])
  @@index([id])
}
